---
interface Props {
	title: string;
}

const { title } = Astro.props

import "@/styles/reset.css"
import '@fontsource-variable/figtree'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Antonio Maldonado Echevarria | @malsebasmal | Desarrollador Web, Aplicaciones Web, FrontEnd Developer, FullStack Developer" />
		<meta name="keywords" content="Portfolio, HTML, CSS, JavaScript, TypeScript, Astro, Tailwind, React js, Next js, Node js, Express js, Antonio Maldonado, Antonio Maldonado Echevarria, malsebasmal, desarrollo web, desarrollo fullstack, frontend developer">
		<meta name="author" content="Antonio Maldonado Echevarria | @malsebasmal">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/caticon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="absolute top-0 z-[-2] bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] w-full h-auto flex flex-col items-center">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Comfortaa Variable', system-ui;
	}
</style>